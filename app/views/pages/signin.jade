extends ../layout_sign

block content 
  .container
    link(href="/css/sign.css" rel="stylesheet")
    #sign 
     span  
      a(href="/fangzhang")  
       img(src="/img/fa.png") 
     span 用户登陆 
     span.xiaogushi  告诉你个小秘密，浏览本网站的最佳分辨率是1366*768 ————何龙溪
    .row
      .col-md-5
        form(method="POST", action="/user/signin")
          .modal-body
            .form-group
              label#demo(for="signinName") 用户名
              input#signinName.form-control(name="user[name]", type="text")
            .form-group
              label(for="signinPassword") 密码
              input#signinPassword.form-control(name="user[password]", type="password")
          .modal-footer
            button.btn.btn-default(type="reset", data-dismiss="modal") 重置
            button.btn.btn-success(type="submit") 提交
