extends ../layout

block content
  .container
    .row
      .panel.panel-default
        .panel-heading
          h3 #{keyword}
        .panel-body
          if movies && movies.length > 0
            each item in movies
              .col-md-2
                .thumbnail
                  a(href="/movie/#{item._id}")
                      if item.poster.indexOf('http:') > -1
                        img(src="#{item.poster}", alt="#{item.title}")
                      else
                        img(src="/upload/#{item.poster}", alt="#{item.title}")
                  .caption
                    h4 #{item.title}
                    p: a.btn.btn-primary.rwjs(href="/movie/#{item._id}", role="button") 人物介绍
      ul.pagination(style="margin-left:50%;margin-bottom:20%;")
        - for (var i = 0; i < totalPage; i++) {
          - if (currentPage == (i + 1)) {
              li.active(title="第"+(i+1)+"页")
                span #{currentPage}
          - }
          - else {
              li(title="第"+(i+1)+"页")
                a(href='/results?#{query}&p=#{i}') #{i + 1}
          - }
        - }
    script(src="js/daohang.js")