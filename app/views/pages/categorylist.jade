extends ../layout_houtai

block content
  .container(style="margin-bottom: 100px;")
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 名字
            th 时间
            th 分类依据
            th 查看
            th 修改
            th 删除
        tbody
          each item in categories
            tr(class="item-id-#{item._id}")
              td #{item.name}
              td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
              td #{item.reason}
              td: a(target="_blank", href="/category/#{item._id}") 查看
              td: a(target="_blank", href="/admin/category/update/#{item._id}") 修改
              td
                button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
  script(src="/js/admin.js")