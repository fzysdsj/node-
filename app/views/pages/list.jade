extends ../layout

block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 人物名称
						th 人物定位
						th 所属阵营
						th 登场年龄
						th 录入时间
						th PV
						th 查看
						th 更新
						th 删除
					tbody
						each item in movies
							tr(class='item-id-#{item._id}')
								td #{item.title}
								td #{item.doctor}
								td #{item.country}
								td #{item.year}
								td #{moment(item.meta.createAt).format('MM/DD/YYYY')}
								td #{item.PV}
								td: a(target='_blank',href='/movie/#{item._id}') 查看
								td: a(target='_blank',href='/admin/movie/update/#{item._id}') 修改
								td
									buttom.btn.btn-danger.del(type='button',data-id='#{item._id}') 删除
	script(src="/js/admin.js")