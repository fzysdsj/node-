extends ../layout

block content
  .container 
    .row(style="margin-top: 100px;")
      each cat in categories
        .panel.panel-default
          .panel-heading
            h3
              a(href='/results?cat=#{cat._id}&p=0') #{cat.name}
          .panel-body
            if cat.movies && cat.movies.length > 0
              each item in cat.movies
                .col-md-2
                  .thumbnail
                    a(href="/movie/#{item._id}")
                      if item.poster.indexOf('http:') > -1
                        img(src="#{item.poster}", alt="#{item.title}")
                      else
                        img(src="/upload/#{item.poster}", alt="#{item.title}")
                        .caption
                          h4 #{item.title}
                          p: a.btn.btn-primary.rwjs(href="/movie/#{item._id}", role="button") 人物介绍
                      script(src="js/daohang.js")
